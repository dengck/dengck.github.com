

/* reset */

html, body, header, nav, section, footer,
div, span, ol, img {
    margin: 0;
    padding: 0;
    border: 0;
    font-size: 100%;
    font-style: normal;
    font-variant: normal;
    font-weight: normal;
    line-height: 100%;
}
ul, ol, li > p {
  margin-top: 0;
}
ul > li     { color: #aaa; }
ul > li > * { color: black; }

/* general styles */

html {
    -moz-text-size-adjust: none;
    -ms-text-size-adjust: none;
    -webkit-text-size-adjust: none;
}
body {
    background-color: #fff;
    color: #000;
    font-family: "Lato", "Arial", sans-serif;
}
em {
  font-style: italic;
  color: navy;
}

strong {
  font-weight: bold;
  color: #083194;
}

h1, h2, h3, h4, h5, h6 {
  color: #527bbd;
  margin-top: 1.2em;
  margin-bottom: 0.5em;
  line-height: 1.3;
}

h1, h2, h3 {
  border-bottom: 2px solid silver;
}
h2 {
  padding-top: 0.5em;
}
h3 {
  float: left;
}
h3 + * {
  clear: left;
}
h5 {
  font-size: 1.0em;
}

div.sectionbody {
  margin-left: 0;
}

hr {
  border: 1px solid silver;
}

p {
  margin-top: 0.5em;
  margin-bottom: 0.5em;
}


a {
    background-color: transparent;
    color: #246;
}
a:hover {
    background-color: inherit;
    color: #390;
}
a:active {
    background-color: #246;
    color: #fff;
}

pre, tt {
    font-size: 14px;
}

.message {
    padding: 0.5em 1em;
}
.info {
    background-color: #efd;
    color: #390;
}
.warning {
    background-color: #fed;
    color: #c30;
}

img.in-text {
    display: block;
    margin: 1em auto;
    text-align: center;     /* for images wrapped in links */
}

img.dennis {
    border-radius: 0.5em;
}

/* menu */

nav {
    font-family: "Courgette", "Trebuchet MS", sans-serif;
}
nav ul {
    list-style-type: none;
}
nav span {
    line-height: 120%;
    text-transform: uppercase;
}
nav a {
    line-height: 120%;
    text-decoration: none;
}

nav a.home {
    background: url("../img/home.8c1abeb15661.png") no-repeat 12px 5px;
    background-size: 40px 30px;
    color: transparent;
    display: block;
    height: 30px;
    overflow: hidden;
    padding: 5px 8px 5px 12px;
    width: 40px;
}
nav a.home:hover {
    background-image: url("../img/home.hover.4079373c219d.png");
}
nav a.home:active {
    background-color: #246;
    background-image: url("../img/home.active.6c570e5bc475.png");
}

nav a.language {
    display: block;
    opacity: 0.75;
    padding: 10px 20px 10px 20px;
}
nav a.language:hover, nav a.language:active {
    opacity: 1;
}

/* content */

section p {
    line-height: 150%;
    margin-bottom: 1em;
}
section p + ol, section p + ul {
    margin-top: -0.5em;
}
section ol, section ul {
    line-height: 150%;
    margin-bottom: 1em;
    margin-left: 1em;
}
section li {
    line-height: 150%;
    margin-bottom: 0.5em;
}

/* header and footer */

header > div, footer > div {
    font-size: 14px;
}

/* contact form */

.email_form {
    max-width: 80%;
    margin: 0 auto;
}

/* responsive design */

@media all and (min-width: 44em) {

    /* layout */

    body {
        padding: 0 2em;
    }
    #wrapper {
        position: relative;
        padding: 10em 4em 6em 4em;
        max-width: 48em;
        min-width: 32em;
        min-height: 40em;
        margin: 0 auto;
        box-shadow: 0 0 1.5em 0 #246;
    }
    header {
        position: absolute;
        bottom: 2em;
        left: 4em;
    }
    header.title {
    	  position: absolute;
        top: 5em;
        right: 10em;
        left:  10em;
        text-align:center;
        font-size:12px;
    	  color: #527bbd;
    
    }
    
    nav {
        position: absolute;
        top: 2em;
        right: 4em;
    }
    footer {
        position: absolute;
        bottom: 2em;
        right: 4em;
    }

    /* menu */

    nav > div {
        float: left;
    }
    nav > ul {
        float: left;
    }
    nav > ul > li {
        display: block;
        float: left;
        text-align: right;
        padding-left: 1.5em;
        min-width: 3em;
    }
    nav span {
        line-height: 160%;
    }
    nav a {
        line-height: 140%;
    }

}

@media all and (max-width: 43.999em) {

    /* layout */

    #wrapper {
        padding: 1.5em 5%;
        border-color: #246;
        border-style: solid;
        border-width: 0.5em 0;
    }

    header {
        margin-bottom: 1em;
        text-align: right;
    }
    nav {
        margin-bottom: 1em;
    }
    footer {
        margin-top: 1em;
        text-align: right;
    }

    /* menu */

    nav > div {
        float: right;
    }
    nav > ul > li > ul, nav > ul > li > ul > li {
        display: inline;
    }
    nav > ul > li > ul > li:first-child:before {
        content: "";
    }
    nav > ul > li > ul > li:before {
        content: " - ";
    }
    nav > ul > li > span:after {
        content: " > ";
    }
}

@media all and (min-width: 32em) {

    section {
        text-align: justify;
    }

    img.in-text {
        clear: right;
        float: right;
        margin: 0 0 1em 2em;
    }

}
