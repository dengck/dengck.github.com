.home {
	overflow: hidden;
}
.home-bg {
	position: absolute;
	top:0;
	left:0;
	bottom:0;
	right:0;
	background: url( http://www.dengck.com/media/dck-bg2.jpg) no-repeat;
	background-size: cover;
}
.home-bg img {
	width: 100%;
	height: 100%;
	display: none;
	*display: block;
}
.home-box {
	position: absolute;
	width: 440px; 
	height: 240px;
	background: rgba(0,0,0,.3);
	*background: #000;
	*filter: alpha(opacity=60); 
	left: 50%;
	top: 50%;
	margin-left:-220px;	
	margin-top: -120px;
	padding: 20px;
	border-radius: 12px;
	color: #EEE;
	font-family: Georgia, serif;
}
.home-box h2,.home-box h3 {
	color: #EEE;
	font-size:24px;
	text-align: center;
	line-height: 36px;
	*font-weight:bold;
}
.home-box h2 {
	*font-weight:bold;
}
.home-box h3 {
	font-size: 16px;
	margin-bottom:30px;
}
.home-box p {
	background: rgba(0,0,0,.5);
	*background: #FFF;
	padding:10px;
	line-height: 24px;
	margin-bottom:20px;
	border-radius: 8px;
	font-size:18px;
	*color: #000;
}

.home-box p:hover {
	background: #FFF;
	background: rgba(255,255,255,.7);
	color: #333;
	*color: #000;
	transition: all 0.4 ease;
	-webkit-transition: all 0.4 ease;
	-moz-transition: all 0.4 ease;
	-o-transition: all 0.4 ease;
}
.home-box p a {
	color: #EEE;
	*font-weight: bold;
	*color: #000;
}
.home-box .icon {
	font-size: 20px;
	margin: 4px;
}
.fa {
  margin: 4px;
}
.fa a :hover {
  color:#000;
	text-decoration:none;
}
.home-box .icon a {
	color: #CCC;
	*color: #666;
}
.home-box p:hover a {
	color: #000;
}
.home-box p:hover .icon a {
	color: #666;
}
.home-box p:hover .icon a:hover {
	color:#000;
	text-decoration:none;
}

/* FUCNK IE8 HACK */
@media \0 screen{
	.home-bg img {
		display: block;
	}
	.home-box {
		background: #000;
		filter: alpha(opacity=60); 
	}
	.home-box h2{
		font-weight:bold;
	}
	.home-box p {
		background: #FFF;
		color: #000;
	}
	.home-box p:hover {
		color: #000;
	}
	.home-box p a {
		color: #000;
		font-weight: bold;
	}
	.home-box .icon a {
		color: #000;
	}
}
