/*=======================================
                container
========================================*/
.container {
    width: 780px;
    padding-left: 40px;
    margin: auto;
}
.article {
    padding: 70px 40px 30px;
    position: relative;
}
.post ul, .post ol {margin: 25px 0 25px 35px;}
.post ul li,.post ol li{margin-bottom:5px;list-style:circle;line-height:28px;font-size: 16px;}
.post ol li{list-style:decimal;}
.post h2 {
    font-size: 24px;
    font-weight: bold;
    line-height: 50px;
    color: #000;
}
.post h3 {
    font-size: 20px;
    font-weight: bold;
    line-height: 36px;
    margin-bottom: 15px;
}
.post {
    font-size: 18px;
    line-height: 30px;
}
.post .prettyprint {
    position: relative;
}
.post-title {
    font-size: 50px;
    line-height: 70px;
    margin-bottom: 20px;
}
.post-info {
    font-family: "lucida grande", "lucida sans unicode", lucida, "Helvetica Neue", helvetica, "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
